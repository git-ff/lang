//layout page
body
  font-family 'Oswald', sans-serif
  background #fefefe

.topshot
  background #f0f0f0
  border-bottom 1px solid #ddd
  font-family 'Oswald', sans-serif
  font-weight 300
  font-size 17px
  padding 30px
  p
    display inline

.container
  width 95%
  max-width 650px
  position absolute
  left 0
  right 0
  clearfix()
  clear both
  p
    padding-bottom 10px
    padding-left 10px
    position relative
    first
      float left
      padding-left 0px
      margin-left 0px

.containers
  width 100%
  max-width 650px
  margin-right auto
  margin-left auto
  margin-top 100px

.col-md-6
  margin-top 100px
  float center
  width 95%

.loginbox
  p
    float right
    text-align left


//Practice page

.modal_block
  width 95%
  max-width 650px
  margin 100px auto 0
  position absolute
  left 0
  right 0
  .number
    text-align right
    color #ddd
  .card
    border 1px solid #ccc
    background #fff
    text-align center
    padding 40px 30px
    box-sizing border-box
    h2
      font-family 'Oswald', sans-serif
      font-size 24px
      margin-bottom 60px
    input
      width 100%
      text-align center
      font-size 18px
      line-height 1.5em

.flip-container
  perspective 1000
  width 95%
  max-width 650px

.flip-container.flip .flipper
  transform rotateY(180deg)

.flipper
  transition 0.6s
  transform-style preserve-3d
  position relative

.front, 
.back
  width 100%
  backface-visibility hidden
  position absolute
  top 0
  left 0

.front
  z-index 2

.back
  transform rotateY(180deg)

.newbox
  margin auto
  position center

.wordbox
  margin auto
  position center

.words
  border 1px solid #ccc
  background #fff
  text-align center
  padding 40px 30px
  box-sizing border-box


//new word page

.row-fluid
  border 1px solid #ccc
  background #fff
  margin 0 1.5% 24px 1.5%
  padding-top 20px
  padding-bottom 20px
  box-sizing border-box

#usr1, #sel3
  margin-bottom 10px
  margin-top 10px

#usr1
  margin-left 0px

#sel3
  margin-right 0px

.btn
  margin-top 10px
  margin-bottom 20px

